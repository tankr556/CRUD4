        crossorigin="anonymous"></script>
</head>

<body>
    <center>
        <h1>User Page</h1>
    </center>
    <table class="table">
        <tr>
            <td>ID</td>
            <td>NAME</td>
            <td>Email</td>
            <td>Action</td>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td><a href="delete?did={{this._id}}" class="btn  btn-danger">Delete</a></td>
            <td><a href="update?uid={{this._id}}" class="btn btn-primary">Edit</a></td>
        </tr>
        {{/each}}
    </table>
</body>

</html>